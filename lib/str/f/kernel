
function str/f/set() {
  local _k=${1}
  shift
  local _v=${*:-.TRUE.}

  if test -z "${_k}" ; then
    cat
    return ${_true_}
  fi

  awk -v k=${_k} -v v="${_v}" 'BEGIN{
    found=0;
  }
  {
    m=sprintf("^ *%s.*",k);
    if(match($0,m)) {
      found=1;
      print k,"=",v
    }
    else
      print;
  }
  END{
    if(!found) {
      print k,"=",v
    }
  }'
}

function str/f/unset() {
  local _k=${1}

  if test -z "${_k}" ; then
    return ${_true_}
  fi

  sed "s/^\ *${_k}.*/#\ &/"
}
