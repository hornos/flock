#!/bin/bash
# VM tool

vbox="VBoxManage -q"

function vm/valid() {
  ${vbox} showvminfo ${1} 2>/dev/null
}

function vm/path() {
  ${vbox} showvminfo ${1} | \
  grep 'Config file:' | \
  sed 's/[^.\/]*//'
}

function vm/create() {
  local _name=${1}
  local _type=${2} # Ubuntu_64 RedHat_64
  local _cpus=${3}
  local _memory=${4}
  local _hdsize=${5}
  local _hostnet=${6}
  local _brdev=${7:-en0: Wi-Fi (AirPort)}

  vm/valid ${_name}
  if ! test $? -gt 0 ; then
    echo " VM ${_name} already created"
    exit 1
  fi
  echo "Create VM ${_name} [${_type}]"
  ${vbox} createvm --name "${_name}" --ostype ${_type} --register
  if test $? -gt 0 ; then exit 1; fi

  local _path=$(vm/path "${_name}")
  _path=$(dirname "${_path}")
  local _disk="${_path}/${_name}-disk01.vdi"
  echo -n "Create HD ${_disk} [${_hdsize}MB]"
  ${vbox} createhd --filename "${_disk}" --size ${_hdsize}
  if test $? -gt 0 ; then exit 1; fi

  if test "${_hostnet}" = "bridged" ; then
    ${vbox} modifyvm "${_name}" --memory ${_memory} --cpus ${_cpus} \
                --acpi on --boot1 net --boot2 disk \
                --nic1 bridged --bridgeadapter1 "${_brdev}" --macaddress1 auto \
                --audio none
  else
    ${vbox} modifyvm "${_name}" --memory ${_memory} --cpus ${_cpus} \
                --acpi on --boot1 net --boot2 disk \
                --nic1 hostonly --hostonlyadapter1 ${_hostnet} \
                --nic2 nat --macaddress1 auto --macaddress2 auto \
                --audio none
  fi

  local _controller="Controller: SATA"

  ${vbox} storagectl "${_name}" --name "${_controller}" --add sata

  ${vbox} storageattach "${_name}" --storagectl "${_controller}" \
                --port 0 --device 0 \
                --type hdd --medium "${_disk}"
}


### main
cmd=${1:-help}
shift

### args
case ${cmd} in
  inventory)
    echo "[core]"
    arg=${1:-core-0?}
    for i in $(VBoxManage list vms | \
               egrep "${arg}" | \
               cut -d" " -f1 | \
               sed s/\"//g); do
      echo $i
    done
  ;;
  create)
    name=${1:-test}
    type=${2:-RedHat_64}
    cpus=${3:-1}
    memory=${4:-1024}
    hdsize=${5:-2000000}
    hostnet=${6:-vboxnet0}
    vm/create ${name} ${type} ${cpus} ${memory} ${hdsize} ${hostnet}
  ;;

  xcp)
    name=${1:-xcp-01}
    type=${2:-RedHat_64}
    cpus=${3:-2}
    memory=${4:-2048}
    hdsize=${5:-2000000}
    hostnet=${6:-vboxnet0}
    vm/create ${name} ${type} ${cpus} ${memory} ${hdsize} ${hostnet}
  ;;

  gateway)
    name=${1:-test}
    type=${2:-Ubuntu_64}
    cpus=${3:-2}
    memory=${4:-1024}
    hdsize=${5:-2000000}
    hostnet=${6:-bridged}
    vm/create ${name} ${type} ${cpus} ${memory} ${hdsize} ${hostnet}
  ;;
  start)
    host="${1}"
    opts=""
    group=false

    # group
    if [ "${host:0:1}" = "/" ] ; then
      group=true
      host="${host:1}"
    fi

    # host
    if [ "${host:0:1}" = "@" ] ; then
      opts="--type headless"
      host="${host:1}"
    fi

    if ${group} ; then
      _hosts=$(${vbox} list -l vms | \
               grep /${host} | \
               grep Config | \
               sed s/.*\\/// | \
               sed s/\\..*//)
      for i in ${_hosts} ; do
        ${vbox} startvm "${i}" ${opts}
      done
    else
      ${vbox} startvm "${host}" ${opts}
    fi
  ;;
  off)
    host="${1}"
    opts=""
    group=false
    # group
    if [ "${host:0:1}" = "/" ] ; then
      group=true
      host="${host:1}"
    fi
    # host
    if [ "${host:0:1}" = "@" ] ; then
      opts="--type headless"
      host="${host:1}"
    fi
    if ${group} ; then
      _hosts=$(${vbox} list -l vms | \
               grep /${host} | \
               grep Config | \
               sed s/.*\\/// | \
               sed s/\\..*//)
      for i in ${_hosts} ; do
        ${vbox} controlvm "${i}" poweroff
      done
    else
      ${vbox} controlvm "${host}" poweroff
    fi
  ;;
  reset)
    ${vbox} controlvm "${1}" reset
  ;;
  snap)
    host=${1:-test}
    snap=${2:-init}
    group=false
    # group
    if [ "${host:0:1}" = "/" ] ; then
      group=true
      host="${host:1}"
    fi
    if ${group} ; then
      _hosts=$(${vbox} list -l vms | \
               grep /${host} | \
               grep Config | \
               sed s/.*\\/// | \
               sed s/\\..*//)
      for i in ${_hosts} ; do
        echo "Snapshot ${i}"
        ${vbox} snapshot "${i}" take "${snap}"
      done
    else
      echo "Snapshot ${host}"
      ${vbox} snapshot "${host}" take "${snap}"
    fi
  ;;
  boot)
    host=${1:-test}
    boot=${2:-net}
    group=false
    # group
    if [ "${host:0:1}" = "/" ] ; then
      group=true
      host="${host:1}"
    fi

    if ${group} ; then
      _hosts=$(${vbox} list -l vms | \
               grep /${host} | \
               grep Config | \
               sed s/.*\\/// | \
               sed s/\\..*//)
      for i in ${_hosts} ; do
        echo "Set boot device: $boot on ${i}"
        ${vbox} modifyvm "${i}" --boot1 "${boot}"
      done
    else
      echo "Set boot device: $boot on ${host}"
      ${vbox} modifyvm "${host}" --boot1 "${boot}"
    fi
  ;;
  group)
    host=${1:-test}
    group=${2:-test}
    ${vbox} modifyvm "${host}" --groups "/${group}"
  ;;
  group?)
    group=${1:-/test}
    ${vbox} list -l vms | \
    grep ${group} | \
    grep Config | \
    sed s/.*\\/// | \
    sed s/\\..*//
  ;;
esac
